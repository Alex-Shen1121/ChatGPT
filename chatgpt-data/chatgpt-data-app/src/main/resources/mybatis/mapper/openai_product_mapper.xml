<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.codingshen.chatgpt.data.infrastructure.dao.IOpenAiProductDao">

    <resultMap id="openAIProductMap" type="top.codingshen.chatgpt.data.infrastructure.po.OpenAiProductPO">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_desc" property="productDesc"/>
        <result column="quota" property="quota"/>
        <result column="price" property="price"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryProductByProductId"
            parameterType="integer"
            resultMap="openAIProductMap">
        SELECT product_id, product_name, product_desc, quota, price, is_enabled
        FROM openai_product
        WHERE product_id = #{productId}
    </select>
</mapper>
